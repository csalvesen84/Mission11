<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CongoBasin - @ViewData["Title"]</title>
    <link href="~/lib/css/bootstrap.css" rel="stylesheet" />
    <link rel="icon" href="~/img/congobasinicon.png" />
    <style>
        .btn-primary {
            background-color: #FF9900;
            color: #FFF;
            border-color: #2F3E48;
        }

            .btn-primary:hover, .btn-primary:focus, .btn-primary:active, .btn-primary.active, .open .dropdown-toggle.btn-primary {
                background-color: #DE8500;
                color: #FFF;
                border-color: #31347B;
            }
    </style>
</head>
<body>
    <div class="bg-dark text-white p-2">
        <span class="navbar-brand m1-2">
            <img src="~/img/congobasin.png" style="max-height:40px" />
        </span>
    </div>
    <div class="row m-1 p-1">
        <div class="col-9">
            @RenderBody()
        </div>
    </div>
</body>
</html>
